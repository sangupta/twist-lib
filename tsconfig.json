{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "rootDir": "src",
        "outDir": "dist",

        // resolve all imports from the src directory if not absolute imports
        "baseUrl": "src",
        // "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "jsx":"react",
        "allowSyntheticDefaultImports": true,

        "target": "es5",
        // "downlevelIteration": true,
        // "importHelpers": false,
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "esnext"
          ],
        "forceConsistentCasingInFileNames": true,
        // "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        // "noUnusedLocals": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "build-scripts/**/*",
        "dist/**/*",
        "node_modules/**/*",
        "test/**/*",
        "node_modules"
    ]
}
